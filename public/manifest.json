{
  "name": "Licenseplate",
  "description": "License Hints for Github",
  "version": "0.1.1",
  "manifest_version": 3,

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["https://github.com/*/*"],
          "css": ["styles.css"],
          "js": ["repoView.js"]
      },
      {
          "matches": ["https://github.com/search?*"],
          "js": ["searchView.js"]
      },
      {
          "matches": ["https://github.com/*"],
          "css": ["styles.css"],
          "js": ["profileView.js"]
      }
  ],

  "background": {
    "service_worker": "background-wrapper.js"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.github.com/",
    "https://github.com/"
  ]
}